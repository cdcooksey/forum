<div class="p-3">
  <p style="color: green"><%= notice %></p>

  <%= render @post %>

  <div>
    <%= link_to "Edit this post",
      edit_post_path(@post),
      data: { turbo_frame: dom_id(@post), turbo_stream: "replace" }
      %>
    <%= link_to "Back to posts", posts_path %>

    <%= button_to "Destroy this post", @post, method: :delete %>
  </div>
</div>
